{
  "manifest_version": 3,
  "name": "DualSearch Switcher",
  "version": "1.0",
  "description": "Switch between Google and Yandex search results with one click.",
  "action": {
    "default_icon": {
      "48": "icon.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "icons": {
    "48": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html"
}
